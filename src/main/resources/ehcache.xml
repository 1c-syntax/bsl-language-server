<?xml version="1.0" encoding="UTF-8"?>
<config
    xmlns:jsr107='http://www.ehcache.org/v3/jsr107'
    xmlns='http://www.ehcache.org/v3'>

  <persistence directory="${user.home}/.bsl-ls-cache"/>

  <cache alias="typoCache">
    <key-type>java.lang.String</key-type>
    <value-type>com.github._1c_syntax.bsl.languageserver.diagnostics.typo.WordStatus</value-type>
    <expiry>
      <none/>
    </expiry>
    <resources>
      <heap unit="entries">1000</heap>
      <disk unit="MB" persistent="true">50</disk>
    </resources>
  </cache>

</config>
